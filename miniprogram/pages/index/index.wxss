/* 首页样式 - 现代化设计 */

/* 欢迎横幅 */
.welcome-banner {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  margin: -24rpx -24rpx 32rpx -24rpx;
  padding: 60rpx 32rpx 80rpx;
  position: relative;
  overflow: hidden;
}

.welcome-banner::before {
  content: '';
  position: absolute;
  top: -50%;
  left: -50%;
  width: 200%;
  height: 200%;
  background: radial-gradient(circle, rgba(255,255,255,0.1) 0%, transparent 70%);
  animation: float 6s ease-in-out infinite;
}

.welcome-content {
  position: relative;
  z-index: 2;
  text-align: center;
}

.welcome-title {
  font-size: 44rpx;
  font-weight: 800;
  color: #ffffff;
  margin-bottom: 16rpx;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.2);
}

.welcome-subtitle {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.9);
  font-weight: 500;
  letter-spacing: 2rpx;
}

.welcome-decoration {
  position: absolute;
  bottom: -40rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 120rpx;
  height: 80rpx;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 60rpx 60rpx 0 0;
}

/* 卡片头部图标 */
.header-icon {
  font-size: 32rpx;
  margin-right: 16rpx;
  animation: bounce 2s infinite;
}

/* 市场概况仪表板 */
.market-dashboard {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 32rpx;
  margin-bottom: 24rpx;
}

.market-item {
  display: flex;
  align-items: center;
  padding: 24rpx;
  background: linear-gradient(135deg, #f8fafc 0%, #e2e8f0 100%);
  border-radius: 20rpx;
  border: 2rpx solid rgba(102, 126, 234, 0.1);
  transition: all 0.3s ease;
}

.market-item:hover {
  transform: translateY(-4rpx);
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.2);
}

.market-icon {
  font-size: 40rpx;
  margin-right: 20rpx;
  animation: float 3s ease-in-out infinite;
}

.market-info {
  flex: 1;
}

.market-label {
  font-size: 24rpx;
  color: #7f8c8d;
  margin-bottom: 8rpx;
  font-weight: 500;
}

.market-value {
  font-size: 32rpx;
  font-weight: 700;
  color: #2c3e50;
}

/* 市场信号 */
.signals-title {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
  padding-bottom: 12rpx;
  border-bottom: 2rpx solid rgba(102, 126, 234, 0.1);
}

.signals-icon {
  font-size: 24rpx;
  margin-right: 12rpx;
}

.signal-item {
  display: flex;
  align-items: center;
  padding: 12rpx 0;
  animation-delay: 0.1s;
}

.signal-dot {
  color: #667eea;
  font-weight: 800;
  margin-right: 16rpx;
  font-size: 28rpx;
}

.signal-text {
  color: #2c3e50;
  font-size: 26rpx;
  line-height: 1.5;
}

/* 推荐标签 */
.recommend-tabs {
  display: flex;
  background: #f8fafc;
  border-radius: 16rpx;
  padding: 8rpx;
  margin-bottom: 32rpx;
  border: 2rpx solid rgba(102, 126, 234, 0.1);
}

.tab-item {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 20rpx 16rpx;
  font-size: 26rpx;
  color: #7f8c8d;
  border-radius: 12rpx;
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.tab-item.active {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #ffffff;
  font-weight: 700;
  transform: scale(1.02);
  box-shadow: 0 4rpx 16rpx rgba(102, 126, 234, 0.3);
}

.tab-icon {
  font-size: 24rpx;
  margin-right: 8rpx;
}

/* 股票容器 */
.stocks-container {
  margin-top: 24rpx;
}

/* 股票头像 */
.stock-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 20rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.3);
}

.stock-initial {
  color: #ffffff;
  font-size: 32rpx;
  font-weight: 800;
}

.stock-meta {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-top: 8rpx;
}

.stock-action {
  text-align: right;
  min-width: 160rpx;
}

/* 更多操作 */
.more-action {
  text-align: center;
  margin: 32rpx 0;
}

.more-action .btn {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  min-width: 280rpx;
  padding: 24rpx 40rpx;
  font-size: 28rpx;
  font-weight: 600;
  border-radius: 24rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #ffffff;
  box-shadow: 0 6rpx 20rpx rgba(102, 126, 234, 0.3);
  transition: all 0.3s ease;
}

.more-action .btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.4);
}

.btn-icon {
  margin-right: 12rpx !important;
  font-size: 24rpx !important;
}

/* 投资建议 */
.suggestions-list {
  margin-bottom: 24rpx;
}

.suggestion-item {
  display: flex;
  align-items: flex-start;
  padding: 16rpx 0;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.05);
}

.suggestion-item:last-child {
  border-bottom: none;
}

.suggestion-icon {
  font-size: 24rpx;
  margin-right: 16rpx;
  margin-top: 4rpx;
}

.suggestion-text {
  flex: 1;
  color: #2c3e50;
  font-size: 26rpx;
  line-height: 1.6;
}

/* 风险评估 */
.risk-assessment {
  padding: 24rpx;
  background: linear-gradient(135deg, #f8fafc 0%, #e2e8f0 100%);
  border-radius: 16rpx;
  border: 2rpx solid rgba(102, 126, 234, 0.1);
}

.risk-header {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.risk-icon {
  font-size: 24rpx;
  margin-right: 12rpx;
}

.risk-title {
  font-size: 28rpx;
  font-weight: 700;
  color: #2c3e50;
}

.risk-content {
  display: flex;
  align-items: center;
}

.risk-label {
  font-size: 26rpx;
  color: #7f8c8d;
  margin-right: 16rpx;
}

/* 免责声明 */
.disclaimer-card {
  margin: 40rpx 0 20rpx;
  padding: 24rpx;
  background: rgba(255, 255, 255, 0.8);
  backdrop-filter: blur(10rpx);
  border-radius: 16rpx;
  border: 2rpx solid rgba(102, 126, 234, 0.1);
}

.disclaimer-content {
  display: flex;
  align-items: flex-start;
}

.disclaimer-icon {
  font-size: 32rpx;
  margin-right: 16rpx;
  margin-top: 4rpx;
}

.disclaimer-text {
  flex: 1;
}

.disclaimer-title {
  font-size: 26rpx;
  font-weight: 700;
  color: #2c3e50;
  margin-bottom: 8rpx;
  display: block;
}

.disclaimer-desc {
  font-size: 22rpx;
  color: #7f8c8d;
  line-height: 1.6;
  display: block;
}

/* 加载和错误状态 */
.loading-overlay, .error-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(102, 126, 234, 0.9);
  backdrop-filter: blur(20rpx);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 9999;
}

.loading-content, .error-content {
  text-align: center;
  color: #ffffff;
  padding: 60rpx;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 24rpx;
  backdrop-filter: blur(10rpx);
  border: 2rpx solid rgba(255, 255, 255, 0.2);
}

.loading-text {
  font-size: 28rpx;
  margin-top: 24rpx;
  color: #ffffff;
}

.error-icon {
  font-size: 120rpx;
  margin-bottom: 24rpx;
  display: block;
}

.error-title {
  font-size: 32rpx;
  font-weight: 700;
  margin-bottom: 16rpx;
  color: #ffffff;
}

.error-message {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.9);
  line-height: 1.5;
}

.error-actions {
  margin-top: 32rpx;
}

/* 每日金句样式 */
.quote-meta {
  display: flex;
  align-items: center;
  color: #667eea;
  cursor: pointer;
  transition: all 0.2s ease;
}

.quote-meta:hover {
  color: #764ba2;
}

.quote-meta .arrow {
  font-size: 32rpx;
  margin-left: 8rpx;
  transform: rotate(0deg);
  transition: transform 0.2s ease;
}

.quote-meta:active .arrow {
  transform: rotate(90deg);
}

/* 首页金句卡片特殊样式 */
.card-body quote-card {
  margin: 0;
}
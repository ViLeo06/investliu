/* 全局样式 - 现代化金融主题 */
page {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  min-height: 100vh;
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica, 'Segoe UI', Arial, Roboto, 'PingFang SC', 'miui', 'Hiragino Sans GB', 'Microsoft Yahei', sans-serif;
  font-size: 28rpx;
  color: #2c3e50;
}

/* tabBar增强样式 - 通过系统级样式覆盖 */
.wx-tab-bar {
  background: rgba(255, 255, 255, 0.98) !important;
  backdrop-filter: blur(20rpx);
  border-top: 1rpx solid rgba(102, 126, 234, 0.15) !important;
  box-shadow: 0 -8rpx 32rpx rgba(0, 0, 0, 0.12);
  padding: 8rpx 0 8rpx 0;
}

.wx-tab-bar-item {
  position: relative;
  transition: all 0.25s ease;
}

/* 选中状态的增强效果 */
.wx-tab-bar-item.wx-tab-bar-item_selected {
  transform: scale(1.08);
}

/* 文字样式增强 */
.wx-tab-bar-item .wx-tab-bar-label {
  font-size: 22rpx !important;
  font-weight: 500;
  color: #7f8c8d !important;
  transition: all 0.25s ease;
}

.wx-tab-bar-item.wx-tab-bar-item_selected .wx-tab-bar-label {
  font-size: 26rpx !important;
  font-weight: 700 !important;
  color: #667eea !important;
}

/* 添加底部指示器 */
.wx-tab-bar-item.wx-tab-bar-item_selected::after {
  content: '';
  position: absolute;
  bottom: 2rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 24rpx;
  height: 3rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 2rpx;
  animation: tabIndicator 0.3s ease;
}

@keyframes tabIndicator {
  0% {
    width: 0;
    opacity: 0;
  }
  100% {
    width: 24rpx;
    opacity: 1;
  }
}

/* 选中时的微妙阴影效果 */
.wx-tab-bar-item.wx-tab-bar-item_selected {
  filter: drop-shadow(0 4rpx 8rpx rgba(102, 126, 234, 0.2));
}

/* 页面内容区域 */
.page-content {
  background: #f8fafc;
  min-height: 100vh;
  position: relative;
}

/* 容器 */
.container {
  padding: 24rpx;
  min-height: 100vh;
  background: transparent;
}

/* 卡片样式 - 现代玻璃效果 */
.card {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20rpx);
  border-radius: 24rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.12);
  margin-bottom: 24rpx;
  overflow: hidden;
  border: 1rpx solid rgba(255, 255, 255, 0.2);
  transition: all 0.3s ease;
}

.card:hover {
  transform: translateY(-4rpx);
  box-shadow: 0 12rpx 48rpx rgba(0, 0, 0, 0.15);
}

.card-header {
  padding: 32rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #ffffff;
  font-size: 32rpx;
  font-weight: 700;
  position: relative;
  overflow: hidden;
}

.card-header::before {
  content: '';
  position: absolute;
  top: -50%;
  left: -50%;
  width: 200%;
  height: 200%;
  background: radial-gradient(circle, rgba(255,255,255,0.1) 0%, transparent 70%);
  opacity: 0;
  transition: opacity 0.3s ease;
}

.card-header:hover::before {
  opacity: 1;
}

.card-body {
  padding: 32rpx;
  background: #ffffff;
}

/* 列表项 - 现代化设计 */
.list-item {
  padding: 32rpx;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.05);
  display: flex;
  align-items: center;
  background: #ffffff;
  transition: all 0.3s ease;
  position: relative;
}

.list-item:last-child {
  border-bottom: none;
}

.list-item.active {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #ffffff;
  transform: scale(1.02);
}

/* 股票项样式 - 高级卡片设计 */
.stock-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx;
  margin: 16rpx 0;
  background: #ffffff;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
  border: 1rpx solid rgba(102, 126, 234, 0.1);
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.stock-item::before {
  content: '';
  position: absolute;
  left: 0;
  top: 0;
  width: 6rpx;
  height: 100%;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  transform: scaleY(0);
  transition: transform 0.3s ease;
}

.stock-item:hover::before {
  transform: scaleY(1);
}

.stock-item:active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.15);
}

.stock-info {
  flex: 1;
  padding-left: 24rpx;
}

.stock-name {
  font-size: 34rpx;
  font-weight: 700;
  color: #2c3e50;
  margin-bottom: 12rpx;
  letter-spacing: 0.5rpx;
}

.stock-code {
  font-size: 24rpx;
  color: #7f8c8d;
  background: #ecf0f1;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  display: inline-block;
  font-weight: 600;
}

.stock-price {
  text-align: right;
  min-width: 160rpx;
}

.price {
  font-size: 38rpx;
  font-weight: 800;
  margin-bottom: 8rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  -webkit-background-clip: text;
  background-clip: text;
  color: transparent;
}

.change {
  font-size: 24rpx;
  font-weight: 600;
}

/* 颜色系统 - 现代化色彩 */
.text-red {
  color: #e74c3c;
}

.text-green {
  color: #27ae60;
}

.text-gray {
  color: #7f8c8d;
}

.text-primary {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  -webkit-background-clip: text;
  background-clip: text;
  color: transparent;
  font-weight: 600;
}

.bg-red {
  background: linear-gradient(135deg, #e74c3c 0%, #c0392b 100%);
}

.bg-green {
  background: linear-gradient(135deg, #27ae60 0%, #2ecc71 100%);
}

.bg-gradient {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

/* 按钮系统 - 现代化设计 */
.btn {
  padding: 24rpx 48rpx;
  border-radius: 24rpx;
  font-size: 28rpx;
  font-weight: 600;
  text-align: center;
  border: none;
  outline: none;
  position: relative;
  overflow: hidden;
  transition: all 0.3s ease;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
}

.btn::before {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  width: 0;
  height: 0;
  background: rgba(255, 255, 255, 0.3);
  border-radius: 50%;
  transform: translate(-50%, -50%);
  transition: width 0.3s ease, height 0.3s ease;
}

.btn:active::before {
  width: 300rpx;
  height: 300rpx;
}

.btn-primary {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #ffffff;
  border: 2rpx solid transparent;
}

.btn-primary:hover {
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.4);
  transform: translateY(-2rpx);
}

.btn-secondary {
  background: #ffffff;
  color: #667eea;
  border: 2rpx solid #667eea;
}

.btn-secondary:hover {
  background: #667eea;
  color: #ffffff;
  transform: translateY(-2rpx);
}

.btn-ghost {
  background: rgba(255, 255, 255, 0.1);
  color: #ffffff;
  border: 2rpx solid rgba(255, 255, 255, 0.3);
  backdrop-filter: blur(10rpx);
}

.btn-small {
  padding: 16rpx 32rpx;
  font-size: 24rpx;
  border-radius: 16rpx;
}

.btn-large {
  padding: 32rpx 64rpx;
  font-size: 32rpx;
  border-radius: 32rpx;
}

/* 标签系统 - 现代化设计 */
.tag {
  display: inline-flex;
  align-items: center;
  padding: 12rpx 20rpx;
  font-size: 22rpx;
  font-weight: 600;
  border-radius: 20rpx;
  margin-right: 12rpx;
  margin-bottom: 8rpx;
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.tag::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255,255,255,0.3), transparent);
  transition: left 0.5s ease;
}

.tag:hover::before {
  left: 100%;
}

.tag-success {
  background: linear-gradient(135deg, #27ae60 0%, #2ecc71 100%);
  color: #ffffff;
  box-shadow: 0 4rpx 12rpx rgba(39, 174, 96, 0.3);
}

.tag-warning {
  background: linear-gradient(135deg, #f39c12 0%, #e67e22 100%);
  color: #ffffff;
  box-shadow: 0 4rpx 12rpx rgba(243, 156, 18, 0.3);
}

.tag-danger {
  background: linear-gradient(135deg, #e74c3c 0%, #c0392b 100%);
  color: #ffffff;
  box-shadow: 0 4rpx 12rpx rgba(231, 76, 60, 0.3);
}

.tag-info {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #ffffff;
  box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.3);
}

.tag-light {
  background: rgba(255, 255, 255, 0.9);
  color: #2c3e50;
  border: 1rpx solid rgba(44, 62, 80, 0.1);
  backdrop-filter: blur(10rpx);
}

/* 分割线 - 优雅设计 */
.divider {
  height: 2rpx;
  background: linear-gradient(90deg, transparent, rgba(102, 126, 234, 0.3), transparent);
  margin: 32rpx 0;
  border-radius: 1rpx;
}

/* 评分显示 - 现代化设计 */
.score {
  display: inline-flex;
  align-items: center;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
  font-weight: 700;
  position: relative;
  overflow: hidden;
  backdrop-filter: blur(10rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
}

.score::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: inherit;
  opacity: 0.1;
  z-index: -1;
}

.score-high {
  background: linear-gradient(135deg, #27ae60 0%, #2ecc71 100%);
  color: #ffffff;
  box-shadow: 0 4rpx 16rpx rgba(39, 174, 96, 0.4);
}

.score-medium {
  background: linear-gradient(135deg, #f39c12 0%, #e67e22 100%);
  color: #ffffff;
  box-shadow: 0 4rpx 16rpx rgba(243, 156, 18, 0.4);
}

.score-low {
  background: linear-gradient(135deg, #e74c3c 0%, #c0392b 100%);
  color: #ffffff;
  box-shadow: 0 4rpx 16rpx rgba(231, 76, 60, 0.4);
}

/* 推荐等级 - 高级设计 */
.recommendation {
  padding: 12rpx 24rpx;
  border-radius: 24rpx;
  font-size: 22rpx;
  font-weight: 700;
  text-align: center;
  min-width: 120rpx;
  position: relative;
  overflow: hidden;
  transition: all 0.3s ease;
  backdrop-filter: blur(10rpx);
  display: flex;
  align-items: center;
  justify-content: center;
}

.recommendation text {
  color: inherit;
  font-size: inherit;
  font-weight: inherit;
  white-space: nowrap;
}

.recommendation::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255,255,255,0.2), transparent);
  transition: left 0.5s ease;
}

.recommendation:hover::before {
  left: 100%;
}

.rec-strong-buy {
  background: linear-gradient(135deg, #27ae60 0%, #2ecc71 100%);
  color: #ffffff;
  box-shadow: 0 6rpx 20rpx rgba(39, 174, 96, 0.4);
}

.rec-buy {
  background: linear-gradient(135deg, #52c41a 0%, #73d13d 100%);
  color: #ffffff;
  box-shadow: 0 6rpx 20rpx rgba(82, 196, 26, 0.4);
}

.rec-hold {
  background: linear-gradient(135deg, #95a5a6 0%, #bdc3c7 100%);
  color: #ffffff;
  box-shadow: 0 6rpx 20rpx rgba(149, 165, 166, 0.4);
}

.rec-sell {
  background: linear-gradient(135deg, #ff7875 0%, #ff4d4f 100%);
  color: #ffffff;
  box-shadow: 0 6rpx 20rpx rgba(255, 120, 117, 0.4);
}

.rec-strong-sell {
  background: linear-gradient(135deg, #e74c3c 0%, #c0392b 100%);
  color: #ffffff;
  box-shadow: 0 6rpx 20rpx rgba(231, 76, 60, 0.4);
}


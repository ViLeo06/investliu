/* 全局样式 */
page {
  background-color: #f5f5f5;
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica, 'Segoe UI', Arial, Roboto, 'PingFang SC', 'miui', 'Hiragino Sans GB', 'Microsoft Yahei', sans-serif;
  font-size: 28rpx;
  color: #333;
}

/* 容器 */
.container {
  padding: 20rpx;
  min-height: 100vh;
}

/* 卡片样式 */
.card {
  background: #fff;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  margin-bottom: 20rpx;
  overflow: hidden;
}

.card-header {
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.card-body {
  padding: 30rpx;
}

/* 列表项 */
.list-item {
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
  display: flex;
  align-items: center;
  background: #fff;
}

.list-item:last-child {
  border-bottom: none;
}

.list-item.active {
  background: #f7f9ff;
}

/* 股票项样式 */
.stock-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
  background: #fff;
}

.stock-info {
  flex: 1;
}

.stock-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 10rpx;
}

.stock-code {
  font-size: 24rpx;
  color: #999;
}

.stock-price {
  text-align: right;
}

.price {
  font-size: 36rpx;
  font-weight: 600;
  margin-bottom: 5rpx;
}

.change {
  font-size: 24rpx;
}

/* 颜色 */
.text-red {
  color: #f5222d;
}

.text-green {
  color: #52c41a;
}

.text-gray {
  color: #999;
}

.bg-red {
  background-color: #f5222d;
}

.bg-green {
  background-color: #52c41a;
}

/* 按钮 */
.btn {
  padding: 20rpx 40rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
  text-align: center;
  border: none;
  outline: none;
}

.btn-primary {
  background: #1296db;
  color: #fff;
}

.btn-secondary {
  background: #f0f0f0;
  color: #333;
}

.btn-small {
  padding: 10rpx 20rpx;
  font-size: 24rpx;
  border-radius: 8rpx;
}

/* 标签 */
.tag {
  display: inline-block;
  padding: 8rpx 16rpx;
  font-size: 22rpx;
  border-radius: 8rpx;
  margin-right: 10rpx;
}

.tag-success {
  background: #f6ffed;
  color: #52c41a;
  border: 1rpx solid #b7eb8f;
}

.tag-warning {
  background: #fffbe6;
  color: #faad14;
  border: 1rpx solid #ffe58f;
}

.tag-danger {
  background: #fff2f0;
  color: #f5222d;
  border: 1rpx solid #ffccc7;
}

.tag-info {
  background: #f0f9ff;
  color: #1296db;
  border: 1rpx solid #91d5ff;
}

/* 分割线 */
.divider {
  height: 1rpx;
  background: #f0f0f0;
  margin: 20rpx 0;
}

/* Flex布局 */
.flex {
  display: flex;
}

.flex-center {
  display: flex;
  align-items: center;
  justify-content: center;
}

.flex-between {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.flex-1 {
  flex: 1;
}

/* 文字大小 */
.text-xs {
  font-size: 20rpx;
}

.text-sm {
  font-size: 24rpx;
}

.text-base {
  font-size: 28rpx;
}

.text-lg {
  font-size: 32rpx;
}

.text-xl {
  font-size: 36rpx;
}

/* 间距 */
.mt-10 {
  margin-top: 10rpx;
}

.mt-20 {
  margin-top: 20rpx;
}

.mb-10 {
  margin-bottom: 10rpx;
}

.mb-20 {
  margin-bottom: 20rpx;
}

.ml-10 {
  margin-left: 10rpx;
}

.mr-10 {
  margin-right: 10rpx;
}

.p-10 {
  padding: 10rpx;
}

.p-20 {
  padding: 20rpx;
}

/* 加载状态 */
.loading {
  text-align: center;
  padding: 40rpx;
  color: #999;
}

.empty {
  text-align: center;
  padding: 80rpx;
  color: #999;
}

.empty-icon {
  font-size: 120rpx;
  color: #ddd;
  margin-bottom: 20rpx;
}

/* 评分显示 */
.score {
  display: inline-flex;
  align-items: center;
  padding: 4rpx 12rpx;
  border-radius: 16rpx;
  font-size: 22rpx;
  font-weight: 600;
}

.score-high {
  background: #f6ffed;
  color: #52c41a;
}

.score-medium {
  background: #fffbe6;
  color: #faad14;
}

.score-low {
  background: #fff2f0;
  color: #f5222d;
}

/* 推荐等级 */
.recommendation {
  padding: 8rpx 16rpx;
  border-radius: 8rpx;
  font-size: 22rpx;
  font-weight: 600;
  text-align: center;
  min-width: 120rpx;
}

.rec-strong-buy {
  background: #f6ffed;
  color: #52c41a;
  border: 1rpx solid #b7eb8f;
}

.rec-buy {
  background: #f6ffed;
  color: #73d13d;
  border: 1rpx solid #b7eb8f;
}

.rec-hold {
  background: #fafafa;
  color: #666;
  border: 1rpx solid #d9d9d9;
}

.rec-sell {
  background: #fff2f0;
  color: #ff7875;
  border: 1rpx solid #ffccc7;
}

.rec-strong-sell {
  background: #fff2f0;
  color: #f5222d;
  border: 1rpx solid #ffccc7;
}
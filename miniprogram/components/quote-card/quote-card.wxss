/* 投资金句卡片组件样式 */

.quote-card {
  position: relative;
  margin: 20rpx;
  padding: 40rpx 30rpx;
  border-radius: 24rpx;
  color: white;
  box-shadow: 0 12rpx 40rpx rgba(0, 0, 0, 0.15);
  overflow: hidden;
  transition: all 0.3s cubic-bezier(0.4, 0.0, 0.2, 1);
  backdrop-filter: blur(10rpx);
}

.quote-card.clicking {
  transform: scale(0.98);
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.2);
}

/* 卡片头部 */
.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.category-info {
  display: flex;
  align-items: center;
}

.category-icon {
  font-size: 32rpx;
  margin-right: 12rpx;
}

.category-name {
  font-size: 24rpx;
  opacity: 0.9;
  font-weight: 500;
}

.share-btn {
  padding: 12rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.2);
  backdrop-filter: blur(10rpx);
  transition: all 0.2s ease;
}

.share-btn:active {
  transform: scale(0.9);
  background: rgba(255, 255, 255, 0.3);
}

/* 金句内容 */
.quote-content {
  margin-bottom: 30rpx;
}

.quote-text {
  font-size: 32rpx;
  line-height: 1.6;
  font-weight: 500;
  letter-spacing: 1rpx;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

/* 作者信息 */
.quote-author {
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
  margin-bottom: 20rpx;
}

.author-name {
  font-size: 26rpx;
  opacity: 0.9;
  font-style: italic;
  font-weight: 400;
}

.quote-meta {
  display: flex;
  align-items: center;
}

.source-page {
  font-size: 22rpx;
  opacity: 0.7;
  background: rgba(255, 255, 255, 0.15);
  padding: 6rpx 12rpx;
  border-radius: 12rpx;
  backdrop-filter: blur(5rpx);
}

/* 标签 */
.quote-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
  margin-top: 20rpx;
}

.tag {
  font-size: 20rpx;
  padding: 8rpx 16rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 16rpx;
  backdrop-filter: blur(5rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.1);
}

/* 装饰性元素 */
.decoration {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  pointer-events: none;
  opacity: 0.1;
}

.decoration-circle {
  position: absolute;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.1);
}

.circle-1 {
  width: 120rpx;
  height: 120rpx;
  top: -40rpx;
  right: -40rpx;
}

.circle-2 {
  width: 80rpx;
  height: 80rpx;
  bottom: -20rpx;
  left: -20rpx;
}

.decoration-line {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 4rpx;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
}

/* 不同样式变体 */
.quote-card.compact {
  padding: 30rpx 24rpx;
  margin: 15rpx;
}

.quote-card.compact .quote-text {
  font-size: 28rpx;
}

.quote-card.compact .category-name {
  font-size: 22rpx;
}

.quote-card.detailed {
  padding: 50rpx 35rpx;
}

.quote-card.detailed .quote-text {
  font-size: 34rpx;
  line-height: 1.7;
}

/* 响应式设计 */
@media (max-width: 320px) {
  .quote-card {
    margin: 16rpx;
    padding: 32rpx 24rpx;
  }
  
  .quote-text {
    font-size: 28rpx;
  }
}

/* 动画效果 */
.quote-card {
  animation: fadeInUp 0.6s cubic-bezier(0.4, 0.0, 0.2, 1);
}

@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(30rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* 深色模式适配 */
@media (prefers-color-scheme: dark) {
  .quote-card {
    box-shadow: 0 12rpx 40rpx rgba(0, 0, 0, 0.3);
  }
}

/* 分享模态框 */
.share-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 9999;
  display: flex;
  align-items: center;
  justify-content: center;
}

.share-modal-bg {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  backdrop-filter: blur(10rpx);
}

.share-modal-content {
  position: relative;
  background: white;
  border-radius: 24rpx;
  padding: 60rpx;
  min-width: 400rpx;
  max-width: 600rpx;
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.3);
  animation: modalSlideUp 0.3s cubic-bezier(0.4, 0.0, 0.2, 1);
}

.share-loading {
  text-align: center;
}

.loading-text {
  font-size: 28rpx;
  color: #333;
  margin-top: 20rpx;
}

/* 模态框动画 */
@keyframes modalSlideUp {
  from {
    opacity: 0;
    transform: translateY(100rpx) scale(0.9);
  }
  to {
    opacity: 1;
    transform: translateY(0) scale(1);
  }
}